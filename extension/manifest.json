{
  "manifest_version": 3,
  "name": "ReviewFinder",
  "version": "1.0",
  "description": "Aggregates reviews from Yelp, Reddit, and more.",
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}